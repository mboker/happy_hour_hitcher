<h3><strong> <%= @user.name %> </strong></h3>

<p><strong>Email: </strong>
<%= @user.email if @user.email %></p>

<p><strong>Address: </strong>
<%= @user.address if @user.address %></p>
</br>

<strong>Rides <%= @user.name %> is a Passenger On</strong>
<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Place & Time </th>
    </tr>
  </thead>
  <tbody>
    <% @user_sitting_rides.each do |user_sitting_ride| %>
    <tr><td>
    Ride: <%=link_to user_sitting_ride.event.name, user_sitting_ride.event %>&nbsp;</td>
    <td>
    <%= user_sitting_ride.event.location.name %> At <%= user_sitting_ride.time.hour %> o'clock &nbsp;
    </td>
    <td><strong><%= link_to 'Cancel Seat', user_sitting_ride, method: :delete, data: { confirm: 'Are you sure?' } %></strong></td>
    </tr> 
<% end %>
</tbody>
</table>
</br>

<strong>Rides <%= @user.name %> is a Driver On</strong>
<table>
<thead>
<tr>
<th>Event</th>
<th>Place & Time </th>
</tr>
</thead>
<tbody>
<% @user_driving_rides.each do |user_driving_ride| %>
<tr><td>
  Ride: <%=link_to user_driving_ride.event.name, user_driving_ride.event %>&nbsp;</td>
  <td>
     <%= user_driving_ride.event.location.name %> At <%= user_driving_ride.time.hour %> o'clock &nbsp;
  </td>
  <td><strong><%= link_to 'Cancel Drive', user_driving_ride, method: :delete, data: { confrim: 'Are you sure?' } %></strong></td>
</tr>
<% end %>
</tbody>
</table>


