<h1>Listing rides</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Day</th>
      <th>Time</th>
      <th>Seats</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.event_id %></td>
        <td><%= ride.day %></td>
        <td><%= ride.time %></td>
        <td><%= ride.seats %></td>
        <td><%= link_to 'Show', ride %></td>
        <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
        <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

